#include <iostream>
#include <string>
#include <memory>
using namespace std;

class Account{
public:
	void withdraw() const{
		cout << "Account::Withdraw"  << endl;
	}
};

class Checking : public Account{
public:
	void withdraw() const{
		cout << "Checking::Withdraw"  << endl;
	}
};

class Saving : public Account{
public:
	void withdraw() const{
		cout << "Saving::Withdraw"  << endl;
	}
};

class Trust : public Saving{
public:
	void withdraw() const{
		cout << "Trust::Withdraw"  << endl;
	}
};

void greetings(const Base &b){
	cout << "Greetings ";
	b.sayClass();
}

int main(){
	Base b;
	b.sayClass();
	greetings(b);

	Derived d;
	d.sayClass(); //static binding says that it is a base
	greetings(d);

	Base * ptr = new Derived();
	ptr -> sayClass(); //static binding says that it is a base

	unique_ptr<Base> ptr1 = make_unique<Derived>();
	ptr1 -> sayClass(); //static binding says that it is a base
	delete ptr;
	return 0;
}
