#ifndef ACCOUNT_HPP_
#define ACCOUNT_HPP_
#include <string>
#include <iostream>

class Account{
	friend std::ostream &operator<<(std::ostream &, const Account &);
private:
	static int createdAccounts;
public:
	Account();

	virtual bool deposit(double) =0;
	virtual bool withdraw(double) =0;
	virtual bool ~deposit(){};
	virtual bool ~withdraw(){};
	static int getTotalAccounts(void) const;
};








#endif /* ACCOUNT_HPP_ */
