#include <iostream>
#include <string>
using namespace std;

class Base{
public:
	void sayClass() const{
		cout << "Base Class"  << endl;
	}
};

class Derived : public Base{
public:
	void sayClass() const{
		cout << "Derived Class" << endl;
	}
};

void greetings(const Base &b){
	cout << "Greetings ";
	b.sayClass();
}

int main(){
	Base b;
	b.sayClass();
	greetings(b);

	Derived d;
	d.sayClass();
	greetings(d);

	Base * ptr = new Derived();
	ptr -> sayClass();
	return 0;
}
