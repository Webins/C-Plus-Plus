#ifndef ACCOUNT_HPP_
#define ACCOUNT_HPP_
#include <string>
#include <iostream>

class Account{
	friend std::ostream &operator<<(std::ostream &, const Account &);
private:
	static int identifier;
	std::string name;
	double balance;
	int id;
public:
	Account(std::string, double);
	Account(std::string);
	Account();

	virtual bool deposit(double) =0;
	virtual bool withdraw(double) =0;
	virtual bool ~deposit(){};
	virtual bool ~withdraw(){};

	std::string getName(void) const;
	double getBalance(void) const ;
	static int getId(void) const;
};








#endif /* ACCOUNT_HPP_ */
